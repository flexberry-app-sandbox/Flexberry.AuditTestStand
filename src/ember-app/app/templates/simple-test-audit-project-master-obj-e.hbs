<h3 class="ui header">{{t "forms.simple-test-audit-project-master-obj-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.masterName
      class=(if (v-get validationObject "masterName" "isInvalid") "error")
      label=(t "forms.simple-test-audit-project-master-obj-e.masterName-caption")
      data-test-simple-test-audit-project-master-obj-e-masterName=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "masterName" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.masterField
      class=(if (v-get validationObject "masterField" "isInvalid") "error")
      label=(t "forms.simple-test-audit-project-master-obj-e.masterField-caption")
      data-test-simple-test-audit-project-master-obj-e-masterField=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "masterField" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.simple-test-audit-project-master-obj-e.masterDetail-caption"}}</label>
    {{flexberry-groupedit
      componentName="masterDetailGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.masterDetail
      content=model.masterDetail
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "masterDetail" "isInvalid") "error")
      data-test-simple-test-audit-project-master-obj-e-masterDetail=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "masterDetail" "message")}}
  </div>
</form>